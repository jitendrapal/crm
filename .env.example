# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/invoice_crm?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# n8n Webhooks
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_INVOICE_CREATED_WEBHOOK=http://localhost:5678/webhook/invoice-created
N8N_INVOICE_OVERDUE_WEBHOOK=http://localhost:5678/webhook/invoice-overdue
N8N_PAYMENT_RECEIVED_WEBHOOK=http://localhost:5678/webhook/payment-received

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=15m

# PDF Generation
PDF_STORAGE_PATH=./storage/invoices
COMPANY_LOGO_URL=https://your-company.com/logo.png

